@{
    ViewData["Title"] = "Home Page";
}

<div id="myCarousel" class="carousel slide"  data-ride="carousel" data-interval="10000">
    <!-- Indicators -->
    <ol id="Carousel-hidden">
        <li class="#myCarousel" data-slide-to="0" class="active"></li>
        <li class="#myCarousel" data-slide-to="1" ></li>
        <li class="#myCarousel" data-slide-to="2" ></li>
    </ol>

    <!-- wrapper for slides -->
    <div class="carousel-inner">
        <div class="item active">
            <img src="~/images/banner 1.jpg" alt=" PC banner 1" >
            <div class="carousel-caption">
                <h3>NobleHawk Development</h3>
                <p>We are Here for all your website needs</p>
            </div>
        </div>

        <div class="item">
            <img src="~/images/snow.jpg" alt="Mountains"  >
            <div class="carousel-caption">
                <h3>NobleHawk Development</h3>
                <p>Custom Web and Art Designs</p>
            </div>
        </div>
    
        <div class="item">
            <img src="~/images/lake1.jpg" alt="Lake"  >
            <div class="carousel-caption">
                <h3>NobleHawk Development</h3>
                <p>Custom Logos and SEO</p>
            </div>
        </div>

        <!-- Left and right controls -->
        <a class="left carousel-control" href="#myCarousel" data-slide="prev">
            <span class="glyphicon glyphicon-chevron-left"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="right carousel-control" href="#myCarousel" data-slide="next">
            <span class="glyphicon glyphicon-chevron-right"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
</div>
<!--  middle section 3 columns(basic business information)-->
<div class="mid-section-three-columns">
    <div class="mid-section-column1">
        <h2 class="mid-section-headers">Web Design</h2>
        <img class="mid-section-images" src="~/images/clearchoice_home.png" alt="website image">
    </div>
    <div class="mid-section-column2">
        <h2 class="mid-section-headers">Custom web art</h2>
        <img class="mid-section-images" src="~/images/benhome.png" alt="website image">
    </div>
    <div class="mid-section-column3">
        <h2 class="mid-section-headers">Search Engine Opimization</h2>
        <img class="mid-section-images" src="~/images/project_tempus1.png" alt="website image">
    </div>
</div>
